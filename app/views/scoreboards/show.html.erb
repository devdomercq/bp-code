<h2><%= @scoreboard.bpecode %> - <%= @scoreboard.organization %></h2>

<p><%= @scoreboard.description %></p>
<p><pre><%= @scoreboard.code %></pre></p>


<div class="links btn-group">
    <% if user_signed_in? %>
        <% if @scoreboard.user_id == current_user.id %>
            <%= link_to "Edit", edit_scoreboard_path(@scoreboard) %>
            <%= link_to "Delete", scoreboard_path(@scoreboard), method: :delete, data: {
                confirm: "Are you sure?" } %>
        <% end %>
    <% end %>
</div>