<div class="container">
  <div class="col-md-12">
    <div class="well">
      <table class="table table-striped table-bordered table-hover table-responsive">                         
        <tr>
          <th>Event Date</th>                          
          <th>BPE Code</th>
          <th>Organization</th>
          
          <th>Description</th>
        </tr>
        <% @scoreboards.each do |scoreboard| %> 
          <tr>
            <td><%= scoreboard.eventdate %></td> 
            <td><%= scoreboard.bpecode %></td>
            <td><%= scoreboard.organization %></td>
            <td><%= scoreboard.description %></td> 
           
          </tr>
        <% end %>                       
      </table>
    </div>  
  </div>
</div>



