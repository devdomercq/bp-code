<h1 class="current-category"><%= params[:category]%></h1>

<% if @scoreboards.count == 0 %>
    <h3>There are no scoreboards in this category.</h3>
<% else %>
    <% @scoreboards.each do |scoreboard| %>
        <h2><%= link_to scoreboard.bpecode, scoreboard_path(scoreboard) %></h2>
    <% end %>

<% end %>

