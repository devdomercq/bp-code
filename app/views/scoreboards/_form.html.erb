<%= simple_form_for @scoreboard do |f| %>
  <%= f.select :category_id, options_for_select(@categories), { :include_blank => 'Select Category ' }, { :required => true, :class => 'btn btn-default btn-sm dropdown-toggle marg15' } %>
  <%= f.input :bpecode, label: "Event Code", :required => true %>
  <%= f.input :organization, :required => true %>
  <%= f.input :description %>
  <%= f.input :code, label: "Source Code" %>
  <%= f.file_field :scoreboard_img %>
  <div class="text-center">
    <%= f.button :submit, class: "btn-custom2" %>
  </div>
<% end %>


