<%= simple_form_for @scoreboard do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select Category") %>
  <%= f.file_field :scoreboard_img %>
  <%= f.input :bpecode, label: "Event Code" %>
  <%= f.input :organization %>
  <%= f.input :description %>
  <%= f.input :code, label: "Source Code" %>
  <%= f.button :submit %>
<% end %>